/* pages/type/type.wxss */
.type-container {
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  padding: 4%;
  justify-content: space-between;
}
.type-box {
  /* width: 92%; */
  height: 320rpx;
  box-shadow: 0 4px 12px 0 rgba(207, 217, 239, 0.78);
  margin: 4% 0;
  padding: 2%;
  display: flex;
}
.type-box view:nth-child(1) {
  width: 40%;
  height: 100%;
}
.type-box view:nth-child(1) image {
  width: 100%;
  height: 100%;
}
.type-box view:nth-child(2) {
  width: 52%;
  margin-left: 4%;
}
.type-box view:nth-child(2) view {
  width: 100%;
}
.type-box view:nth-child(2) view:nth-child(1) {
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}
.type-box view:nth-child(2) view:nth-child(2) {
  font-size: 24rpx;
  text-indent: 50rpx;
}
