/* pages/articleDetail/articleDetail.wxss */
.article-container {
  background-color: #EFF2F7;
}
.article-top image {
  width: 100%;
}
.article-top view {
  text-align: center;
  padding: 30rpx 0;
  line-height: 30rpx;
}
.article-description {
  padding: 20rpx;
  text-indent: 7%;
  font-size: 26rpx;
  letter-spacing: 4rpx;
}
.article-content {
  padding: 20rpx;
  text-indent: 7%;
  font-size: 30rpx;
  letter-spacing: 3rpx;
}
.article-bottom {
  width: 100%;
}
.article-bottom .article-oprea {
  height: 100rpx;
  background-color: #ffffff;
  border-top: 1px solid #999999;
  border-bottom: 1px solid #999999;
  display: flex;
  align-items: center;
  padding: 10rpx;
  box-sizing: border-box;
  justify-content: space-between;
  font-size: 26rpx;
}
.article-bottom .article-oprea view {
  display: flex;
  align-items: center;
}
.article-bottom .article-oprea view text {
  margin-left: 10rpx;
}
.article-bottom .article-oprea view button {
  width: 60rpx;
  font-size: 28rpx;
  height: auto;
  padding: 0;
}
.article-bottom .article-message {
  padding: 0 30rpx 30rpx;
}
.article-bottom .article-message > view:nth-child(1) {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  text-align: right;
}
.article-bottom .article-message > view:nth-child(2) {
  padding: 6rpx;
  background-color: #ffffff;
}
.article-bottom .article-message > view:nth-child(2) .message-info .info-top {
  display: flex;
  justify-content: space-between;
}
.article-bottom .article-message > view:nth-child(2) .message-info .info-top image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.article-bottom .article-message > view:nth-child(2) .message-info .info-top text {
  font-size: 24rpx;
  margin-left: 6rpx;
}
.article-bottom .article-message > view:nth-child(2) .message-info .info-top view {
  display: flex;
  align-items: center;
}
.article-bottom .article-message > view:nth-child(2) .message-info .info-botton {
  padding: 0 20rpx;
  min-height: 60rpx;
}
.article-bottom .article-message > view:nth-child(2) .message-info .info-botton .comment {
  text-align: right;
  line-height: 36rpx;
}
.article-bottom .article-message > view:nth-child(2) .message-info .info-botton .comment text {
  border: 1px solid #999999;
  border-radius: 10rpx;
}
.article-bottom .article-message > view:nth-child(2) .message-info .info-botton text {
  font-size: 24rpx;
}
.article-bottom .article-message > view:nth-child(2) .message-info .info-botton .user {
  font-size: 26rpx;
  margin-top: 6rpx;
}
.article-bottom .article-message > view:nth-child(2) .message-info .info-botton .user text {
  color: green;
}
